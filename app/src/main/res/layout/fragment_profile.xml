<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
            xmlns:tools="http://schemas.android.com/tools"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ProfileFragment" android:orientation="vertical">

        <!-- TODO: Update blank fragment layout -->
        <Button
                android:layout_gravity="end"
                android:layout_margin="20dp"
                android:layout_width="28dp"
                android:layout_height="29dp" android:id="@+id/buttonSetting"
                android:visibility="visible" android:background="@drawable/baseline_settings_black_18dp"/>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <ImageView
                    android:visibility="visible"
                    android:layout_gravity="left"
                    android:src="@drawable/icon_user_640x640"
                    android:layout_width="151dp"
                    android:layout_height="122dp" android:id="@+id/imageProfile"/>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical">
                <TextView
                        android:gravity="center"
                        android:layout_margin="0dp"
                        android:layout_gravity="right"
                        android:text="Ivan Ivanov"
                        android:layout_width="match_parent"
                        android:layout_height="49dp" android:id="@+id/textViewProfile" android:visibility="visible"
                        android:textStyle="bold" android:textColor="#000"
                        android:textSize="30sp"/>
                <TextView
                        android:gravity="center"
                        android:text="8 960 905 99 88"
                        android:layout_width="match_parent"
                        android:layout_height="73dp" android:id="@+id/textView5" android:layout_weight="1"
                        android:textColor="#000" android:textSize="24sp"/>
            </LinearLayout>
        </LinearLayout>
        <Button
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:text="My events"
                android:layout_width="294dp"
                android:layout_height="wrap_content" android:id="@+id/buttonMyEvents"/>
        <TextView
                android:layout_margin="20dp"
                android:text="TEST TEST TEST TEST"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView4"/>

    </LinearLayout>
</ScrollView>